= form_for @movie, html: { multipart: true } do |f|
  -if @movie.errors.any?
    #error_explanation
      %h2
        = pluralize(@movie.errors.count, "error")
          prohibited this movie from being saved:

      %ul
        -@movie.errors.full_messages.each do |message|
        %li
          = message

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :movie_length
    %br
    = f.text_field :movie_length
  .field
    = f.label :director
    %br
    = f.text_field :director
  .field
    = f.label :rating
    %br
    = f.text_field :rating
  .field
    = f.label :image
    %br
    = f.file_field :image
  .actions
    %br
    = f.submit
    %br